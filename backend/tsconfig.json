{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": [
      "ES2024",
      "ESNext.AsyncIterable",
      "ESNext.Array",
      "ESNext.Collection"
    ],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    "outDir": "./dist"
  },
  "include": ["src"]
}
